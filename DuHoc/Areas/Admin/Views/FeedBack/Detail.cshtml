@model DuHoc.ViewModels.FeedBack.FeedBackUpdateRequest
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

@section css{
    <link href="~/admin/js/summernote/summernote-bs4.min.css" rel="stylesheet">
}

@section js{
    <script src="~/admin/js/summernote/summernote-bs4.js"></script>
    <script src="~/admin/js/custemUrl.js"></script>
    <script>
        $(document).ready(function () {
            $('#reply').summernote({
                height: 200,
                toolbar: [
                    ['style', ['style']],
                    ['font', ['bold', 'italic', 'underline', 'clear']],
                    ['fontname', ['fontname']],
                    ['color', ['color']],
                    ['para', ['ul', 'ol', 'paragraph']],
                    ['height', ['height']],
                    ['table', ['table']],
                    ['insert', ['link', 'picture', 'hr']],
                    ['view', ['fullscreen', 'codeview']],
                    ['help', ['help']]
                ]
            });
        });
    </script>
}
<input type="hidden" id="success" value="@TempData["success"]" />
<input type="hidden" id="warning" value="@TempData["warning"]" />
<input type="hidden" id="error" value="@TempData["error"]" />

<div class="container-fluid">
    <h1 class="mt-4">Cập nhật phản hồi</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Cập nhật phản hồi</li>
    </ol>
    <div class="card mb-4">
        <div class="card-header">
            <a class="btn btn-success" asp-action="Index" asp-controller="FeedBack" asp-area="admin">Về danh sách</a>
        </div>

        <div class="card-body">
            <form asp-action="Confirm" asp-controller="FeedBack" asp-area="Admin" method="post">
                <div class="row">
                    <div class="col-md-8">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" value="@Model.Id" class="form-control" />
                        <div class="form-group">
                            <label class="control-label"> Tên</label>
                            <input readonly asp-for="Name" id="txtName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label"> Email</label>
                            <input readonly asp-for="Email" id="txtUrl" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Số điện thoại</label>
                            <input readonly asp-for="Phone" id="txtName" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Địa chỉ</label>
                            <input readonly asp-for="Address" id="txtUrl" class="form-control" />
                        </div>
                        <div class="form-group">
                            <label class="control-label">Lời nhắn</label>
                            <textarea readonly asp-for="Message" rows="5" class="form-control"></textarea>
                        </div>

                        <div class="form-group">
                            <label class="control-label">Trả lời</label>
                            <textarea asp-for="Reply" id="reply" class="form-control"></textarea>
                            <span asp-validation-for="Reply" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Trạng thái</label>
                            <select disabled class="form-control" id="Status" asp-for="Status">
                                @if (Model.Status == 1)
                                {
                                    <option value="1" selected>Đã xác nhận</option>
                                    <option value="0">Chưa xác nhận</option>
                                }
                                else
                                {
                                    <option value="1">Đã xác nhận</option>
                                    <option value="0" selected>Chưa xác nhận</option>
                                }
                            </select>
                        </div>
                        @*@if (Model.Status == 0)
                        {
                            <div class="form-group">
                                <input type="submit" value="Trả lời" class="btn btn-primary" />
                            </div>
                        }*@

                        <div class="form-group">
                            <input type="submit" value="Trả lời" class="btn btn-primary" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
