@{
    Layout = "_LayoutAdmin";
    var fbs = (List<DuHoc.Models.Feedback>)ViewBag.fbs;
}

<input type="hidden" id="success" value="@TempData["success"]" />
<input type="hidden" id="warning" value="@TempData["warning"]" />
<input type="hidden" id="error" value="@TempData["error"]" />

<div class="container-fluid">
    <h1 class="mt-4">Danh sách phản hồi</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
        <li class="breadcrumb-item active">Danh sách phản hồi</li>
    </ol>
    <div class="card mb-12">
        <div class="card-header">
            <div class="row">
                <div class="col-md-6 col-xs-12">
                    <a class="btn btn-success" asp-action="Create" asp-controller="FeedBack" asp-area="admin">Tạo mới</a>
                </div>
            </div>
        </div>

        <div class="card-body">
            <div class="table-responsive">
                @if (fbs.Count() > 0)
                {
                    <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                        <thead>
                            <tr>
                                <th>STT</th>
                                <th>Tên</th>
                                <th>Email</th>
                                <th>Địa chỉ</th>
                                <th>Số điện thoại</th>
                                <th>Địa chỉ</th>
                                <th>#</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                var stt = 0;
                                @foreach (var item in fbs)
                                {
                            <tr>
                                <td>@Html.Raw(stt = stt + 1)</td>
                                <td>@item.Name</td>
                                <td>@item.Email</td>
                                <td>@item.Address</td>
                                <td>@item.Phone</td>
                                @if (item.Status == 1)
                                {
                                    <td><span class="btn-success">Đã xác nhận</span></td>
                                }
                                else
                                {
                                    <td><span class="btn-danger">Chưa xác nhận</span></td>
                                }
                                <td>
                                    <a href="/Admin/FeedBack/Detail/@item.Id" class="btn btn-primary glyphicon glyphicon-pencilt">Xem</a>
                                    <a class="btn btn-danger glyphicon glyphicon-trash" onclick="return confirm('Bạn có muốn xóa không?');" href="@Url.Action("Delete","FeedBack")/@item.Id">Xóa</a>
                                </td>
                            </tr>
                                }
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <span>Không có phản hồi nào</span>
                }

            </div>
        </div>
    </div>
</div>